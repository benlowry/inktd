package Game{	public final class ExplosionPiece	{		private static var Pool:Vector.<ExplosionPiece> = new Vector.<ExplosionPiece>();				public var x:int;		public var y:int;		public var speedX:Number;		public var speedY:Number;		public var color:uint;		public var gravity:Boolean;		public var ticks:int;				public static function create():ExplosionPiece		{			if(Pool.length > 0)				return Pool.pop();			else				return new ExplosionPiece();		}				public static function dispose(piece:ExplosionPiece):void		{			Pool.push(piece);		}	}}