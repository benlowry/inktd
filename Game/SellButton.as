package Game{		import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;	import flash.text.TextField;	import Assets.SellButton;		public final class SellButton extends Sprite	{		public var background:Bitmap;		public var upRect:Rectangle = new Rectangle(0, 0, 72, 22);		public var overRect:Rectangle = new Rectangle(0, 22, 72, 22);				public function SellButton() 		{ 			useHandCursor = true;			buttonMode = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, over);			addEventListener(MouseEvent.MOUSE_OUT, out);						background = new Bitmap();			background.bitmapData = new Assets.SellButton(52, 44);			background.scrollRect = upRect;			addChildAt(background, 0);					}				private function over(e:MouseEvent):void		{			label.textColor = 0xFFFFFF;			background.scrollRect = overRect;		}				private function out(e:MouseEvent):void		{			label.textColor = 0x336699;			background.scrollRect = upRect;		}	}}