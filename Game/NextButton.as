package Game{		import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;	import flash.text.TextField;	import Assets.NextButton;		public final class NextButton extends Sprite	{		public var background:Bitmap;		public var upRect:Rectangle = new Rectangle(0, 0, 48, 22);		public var overRect:Rectangle = new Rectangle(0, 22, 48, 22);		public var disabled:Boolean = false;				public function NextButton() 		{ 			useHandCursor = true;			buttonMode = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);						background = new Bitmap();			background.bitmapData = new Assets.NextButton(48, 44);			background.scrollRect = upRect;			addChildAt(background, 0);					}				public function enable():void		{			disabled = false;			background.scrollRect = upRect;			alpha = 1;			label.textColor = 0x336699;			useHandCursor = true;		}				public function disable():void		{			disabled = true;			background.scrollRect = upRect;			alpha = 0.5;			label.textColor = 0x336699;			useHandCursor = false;		}				private function over(e:MouseEvent):void		{			if(disabled)				return;							label.textColor = 0xFFFFFF;			background.scrollRect = overRect;		}				private function out(e:MouseEvent):void		{			if(disabled)				return;			label.textColor = 0x336699;			background.scrollRect = upRect;		}	}}