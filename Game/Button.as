package Game{		import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;	import flash.text.TextField;	import Assets.Button;		public final class Button extends Sprite	{		public var background:Bitmap;		public var upRect:Rectangle = new Rectangle(0, 0, 140, 25);		public var overRect:Rectangle = new Rectangle(0, 25, 140, 25);				public function Button() 		{ 			useHandCursor = true;			buttonMode = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);			addEventListener(MouseEvent.CLICK, click, false, 0, true);			background = new Bitmap();			background.bitmapData = new Assets.Button(140, 50);			background.scrollRect = upRect;			addChildAt(background, 0);					}				private function click(e:MouseEvent):void		{			SoundManager.play("Click3");		}				private function over(e:MouseEvent):void		{			label.textColor = 0xFFFFFF;			background.scrollRect = overRect;		}				private function out(e:MouseEvent):void		{			label.textColor = 0x336699;			background.scrollRect = upRect;		}	}}