package Game{	import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.display.MovieClip;		import Assets.TowerButton;		public final class TowerButton extends Sprite	{		public var image:Sprite;		public var background:Bitmap;		public var config:TowerConfig;		public var desc:MovieClip;		public function TowerButton()		{			buttonMode = true;			mouseChildren = false;			useHandCursor = true;							background = new Bitmap();			background.bitmapData = new Assets.TowerButton(150, 28);			background.visible = false;			background.x = -1;			background.y = -1;			addChildAt(background, 0);									addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);		}				private function over(e:MouseEvent):void		{			desc.y = y + parent.y;			desc.label.text = config.longDescription;			desc.visible = true;		}				private function out(e:MouseEvent):void		{			desc.visible = false;		}				public function setImage():void		{			image = new Tower.Blue[config.type-1]();			image.x = 0;			image.y = 0;			addChild(image);		}	}}