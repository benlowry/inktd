package Game{	import flash.display.MovieClip;	import flash.display.Bitmap;		import flash.display.BitmapData;		import flash.events.Event;	import flash.events.MouseEvent;	public final class Lose extends BaseScreen	{		public var w:Game.World;		public var endscreen:EndScreen;				public function Lose(_w:Game.World, _image:BitmapData)		{			super(_image, initializeComplete);			w = _w;		}		private function initializeComplete():void		{			endscreen = new EndScreen(w, endLivesBonus, endKillsBonus, endWavesBonus, endMoneyBonus, livesBonus, killsBonus, wavesBonus, moneyBonus, total);			retryButton.label.text = "RETRY";			retryButton.addEventListener(MouseEvent.CLICK, retry, false, 0, true);						submitButton.label.text = "SUBMIT SCORE";			submitButton.addEventListener(MouseEvent.CLICK, submit, false, 0, true);			quitButton.label.text = "BACK TO MENU";			quitButton.addEventListener(MouseEvent.CLICK, back, false, 0, true);		}					private function submit(e:MouseEvent):void		{		}				private function retry(e:MouseEvent):void		{			endscreen.dispose();			parent.addChild(new Game.World(endscreen.wTarget, endscreen.wMode, Screenshot.create()));						parent.removeChild(this);		}				private function back(e:MouseEvent):void		{			endscreen.dispose();			parent.addChild(new Menu(Screenshot.create()));						parent.removeChild(this);		}	}}