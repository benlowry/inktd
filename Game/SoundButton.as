package Game{		import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;	import Assets.SoundButton;		public final class SoundButton extends Sprite	{		public var down:Boolean = false;		public var background:Bitmap;		public var upRect:Rectangle = new Rectangle(0, 0, 24, 24);		public var overRect:Rectangle = new Rectangle(0, 24, 24, 24);		public var downRect:Rectangle = new Rectangle(0, 48, 24, 24);		public var paused:Boolean = false;		public function SoundButton() 		{ 			useHandCursor = true;			buttonMode = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);			addEventListener(MouseEvent.CLICK, click, false, 0, true);			down = SoundManager.SoundOn;						background = new Bitmap();			background.bitmapData = new Assets.SoundButton(24, 72);			background.scrollRect = down ? downRect : upRect;			addChildAt(background, 0);		}				public function set(on:Boolean)		{			if(on)			{				down = false;				background.scrollRect = upRect;			}			else			{				down = true;				background.scrollRect = downRect;			}		}				private function click(e:MouseEvent):void		{			if(paused)				return;			   			down = !down;						if(down)			{				background.scrollRect = downRect;			}			else			{				background.scrollRect = overRect;			}		}				private function over(e:MouseEvent):void		{							if(down)				return;							background.scrollRect = overRect;		}				private function out(e:MouseEvent):void		{			if(down)				return;			background.scrollRect = upRect;		}	}}