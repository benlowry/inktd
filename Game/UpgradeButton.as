package Game{		import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;	import flash.text.TextField;	import Assets.UpgradeButton;		public final class UpgradeButton extends Sprite	{		public var background:Bitmap;		public var upRect:Rectangle = new Rectangle(0, 0, 95, 22);		public var overRect:Rectangle = new Rectangle(0, 22, 95, 22);				public function UpgradeButton() 		{ 			useHandCursor = true;			buttonMode = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);						background = new Bitmap();			background.bitmapData = new Assets.UpgradeButton(52, 44);			background.scrollRect = upRect;			addChildAt(background, 0);					}				private function over(e:MouseEvent):void		{			if(alpha < 1)				return;							label.textColor = 0xFFFFFF;			background.scrollRect = overRect;		}				private function out(e:MouseEvent):void		{			if(alpha < 1)				return;			label.textColor = 0x336699;			background.scrollRect = upRect;		}	}}