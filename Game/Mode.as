package Game{	import flash.display.BitmapData;	import flash.events.MouseEvent;	import Playtomic.Log;		public final class Mode extends BaseScreen	{		public function Mode(image:BitmapData)		{			super(image, initializeComplete);		}		private function initializeComplete():void		{			free1.label.text = "EASY - 10 WAVES";			free1.addEventListener(MouseEvent.CLICK, play, false, 0, true);			free2.label.text = "MEDIUM - 50 WAVES";			free2.addEventListener(MouseEvent.CLICK, play, false, 0, true);						free3.label.text = "HARD - 100 WAVES";			free3.addEventListener(MouseEvent.CLICK, play, false, 0, true);						path1.label.text = "EASY - 10 WAVES";			path1.addEventListener(MouseEvent.CLICK, play, false, 0, true);						path2.label.text = "MEDIUM - 50 WAVES";			path2.addEventListener(MouseEvent.CLICK, play, false, 0, true);						path3.label.text = "HARD - 100 WAVES";			path3.addEventListener(MouseEvent.CLICK, play, false, 0, true);		}					private function play(e:MouseEvent):void		{			var button:String = (e.target as Game.Button).name;			var mode:int = button.indexOf("path") == 0 ? 0 : 1;			var waves:int;						switch(button)			{				case "path1": case "free1":					waves = 10;					break;								case "path2": case "free2":					waves = 50;					break;								case "path3": case "free3":					waves = 100;					break;			}						// Here we log the selection the user made			Log.CustomMetric(button, "mode");						parent.addChild(new Game.World(waves, mode, Screenshot.create()));			parent.removeChild(this);		}	}}