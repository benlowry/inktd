package Game{		import flash.display.Sprite;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;	import Assets.FastForwardButton;		public final class FastForwardButton extends Sprite	{		public var down:Boolean = false;		public var background:Bitmap;		public var upRect:Rectangle = new Rectangle(0, 0, 23, 19);		public var overRect:Rectangle = new Rectangle(0, 19, 23, 19);		public var downRect:Rectangle = new Rectangle(0, 38, 23, 19);		public function FastForwardButton() 		{ 			useHandCursor = true;			buttonMode = true;			mouseChildren = false;			addEventListener(MouseEvent.MOUSE_OVER, over, false, 0, true);			addEventListener(MouseEvent.MOUSE_OUT, out, false, 0, true);			addEventListener(MouseEvent.CLICK, click, false, 0, true);			down = Main.STAGE.frameRate == 60;						background = new Bitmap();			background.bitmapData = new Assets.FastForwardButton(23, 57);			background.scrollRect = down ? downRect : upRect;			addChildAt(background, 0);		}		private function click(e:MouseEvent):void		{				down = !down;						if(down)			{				background.scrollRect = downRect;			}			else			{				background.scrollRect = overRect;			}		}				private function over(e:MouseEvent):void		{			if(down)				return;							background.scrollRect = overRect;		}				private function out(e:MouseEvent):void		{			if(down)				return;			background.scrollRect = upRect;		}	}}