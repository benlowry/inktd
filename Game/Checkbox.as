package Game{	import flash.display.MovieClip;	import flash.display.Bitmap;	import flash.events.MouseEvent;	import flash.geom.Rectangle;		public final class Checkbox extends MovieClip	{		private static const checked:Rectangle = new Rectangle(0, 22, 23, 22);		private static const unchecked:Rectangle = new Rectangle(0, 0, 23, 22);						public var background:Bitmap;		public var on:Boolean;		public var textColor:uint = 0x336699;		public function Checkbox()		{			buttonMode = true;			mouseChildren = false;			useHandCursor = true;							background = new Bitmap();			background.x = -1;			background.y = -1;			addChildAt(background, 0);		}				public function set(_on:Boolean):void		{			on = _on;			background.scrollRect = on ? checked : unchecked;			label.textColor = on ? 0xFFFFFF : textColor;		}	}}